{
  "name": "react-gtm-hook",
  "author": "Guido Porcaro",
  "repository": "https://github.com/elgorditosalsero/react-gtm-hook",
  "homepage": "https://github.com/elgorditosalsero/react-gtm-hook#readme",
  "keywords": [
    "react hook",
    "google tag manager",
    "gtm",
    "gtm hook",
    "react"
  ],
  "description": "Easily manage the Google Tag Manager via Hook",
  "version": "2.0.2",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/react-gtm-hook.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "test:watch": "tsdx test --env=jsdom --watch",
    "lint": "tsdx lint src test",
    "prepare": "tsdx build"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "all-contributors-cli": "^6.19.0",
    "babel-jest": "^26.5.2",
    "husky": "^4.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "react-test-renderer": "^16.14.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3"
  },
  "rules": {
    "react-hooks/rules-of-hooks": "warn"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            7015
          ]
        },
        "tsConfig": "tsconfig.test.json"
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}